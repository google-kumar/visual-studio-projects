@{
}

@model IEnumerable<first_MVC_App.Models.pen>

<table class="table">
    <tr>
        <td> Pen Id</td>
        <td> Pen Name</td>
        <td> Price</td>
    </tr>

    @foreach(var item in Model)
    {
      <tr>
        <td> @item.penId</td>
        <td> @item.penName</td>
        <td> @item.penPrice</td>
      </tr>
    }

</table>