@model Sri_Arungarai_Amman_Traders.Models.Bill

@{
    ViewData["Title"] = "View My Bill";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h1>View My Bill</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BillsIndex">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BillNo" class="control-label"></label>
                <input asp-for="BillNo" class="form-control" />
                <span asp-validation-for="BillNo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
