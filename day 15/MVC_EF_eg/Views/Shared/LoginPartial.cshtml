@{
}

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor


<ul class="navbar-nav">
    @{
        ViewBag.Data = @HttpContextAccessor.HttpContext.Session.GetString("UserName");
    }
    @if (ViewBag.Data != null)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Home" asp-action="Index" title="Manage">Hello @ViewBag.Data!</a>
    </li>
    <li class="nav-item">
        @*<form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        *@   
        <form> 
            <button  type="submit" class="nav-link btn btn-link text-dark" asp-controller="Login" asp-action="Logout">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Login</a>
    </li>
}
</ul>